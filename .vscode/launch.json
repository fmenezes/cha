    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug operator_passes.ni",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/build/ni",
            "args": [ "-ll", "${workspaceRoot}/build/test.ll", "${workspaceRoot}/test/operator_passes.cha" ],
            "cwd": "${workspaceRoot}/build"
        },
        {
            "name": "Debug ctest test_bin.ni",
            "type": "cppdbg",
            "request": "launch",
            "environment": [{"name":"PATH","value":"${workspaceRoot}/build:${env:PATH}"}],
            "program": "${workspaceRoot}/build/cha_test",
            "args": [ "test_bin.cha" ],
            "cwd": "${workspaceRoot}/test"
        }
    ]
}
